FUNCTION(GX_PREPARE_IMGUI IMGUI_PATH)
    SET(DES_FILE_PATH "${IMGUI_PATH}/backends/imgui_impl_vulkan.h")
    FILE(READ "${DES_FILE_PATH}" IMGUI_FILE)
    # Vulkan backend
    STRING(REPLACE "//#define IMGUI_IMPL_VULKAN_NO_PROTOTYPES" "#define IMGUI_IMPL_VULKAN_NO_PROTOTYPES" IMGUI_FILE "${IMGUI_FILE}")
    FILE(WRITE ${DES_FILE_PATH} "${IMGUI_FILE}")
ENDFUNCTION(GX_PREPARE_IMGUI)

FUNCTION(GX_PREPARE_IMGUI_FB IMGUI_PATH_FB)
    SET(DES_FILE_PATH "${IMGUI_PATH_FB}/ImGuiFileDialogConfig.h")
    FILE(READ "${DES_FILE_PATH}" IMGUI_FILE_FB)
    SET(GX_STR "#define USE_IMGUI_TABLES")
    IF("${IMGUI_FILE_FB}" MATCHES "//${GX_STR}")
        STRING(REPLACE "//${GX_STR}" "${GX_STR}" IMGUI_FILE_FB "${IMGUI_FILE_FB}")
        FILE(WRITE ${DES_FILE_PATH} "${IMGUI_FILE_FB}")
    ELSEIF(NOT "${IMGUI_FILE_FB}" MATCHES "${GX_STR}")
        FILE(APPEND ${DES_FILE_PATH} "\n${GX_STR}\n")
    ENDIF()
ENDFUNCTION(GX_PREPARE_IMGUI_FB)