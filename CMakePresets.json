{
  "version": 10,
  "configurePresets": [
    {
      "name": "vcpkg",
      "hidden": true,
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/vcpkg/triplets"
      }
    },
    {
      "name": "windows-debug",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/build/windows/debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-release",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/build/windows/release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/build/linux/debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/build/linux/release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "wasm-debug",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/build/wasm/debug",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "gearoenix-wasm32",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/gearoenix-emscripten.cmake",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "wasm-release",
      "inherits": "vcpkg",
      "binaryDir": "${sourceDir}/build/wasm/release",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "gearoenix-wasm32",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/gearoenix-emscripten.cmake",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "configurePreset": "windows-release"
    },
    {
      "name": "linux-debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "configurePreset": "linux-release"
    },
    {
      "name": "wasm-debug",
      "configurePreset": "wasm-debug"
    },
    {
      "name": "wasm-release",
      "configurePreset": "wasm-release"
    }
  ]
}